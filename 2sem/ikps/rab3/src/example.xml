            xsi:schemaLocation="http://www.example.com/online-shop shop.xsd">
            
    <!-- Ссылка на общую сущность из DTD -->
    <Title>&companyName; - Order System</Title>
    
    <Customers>
        <Customer id="cust001">
            <Name>Иван Петров</Name>
            <Email>ivan.petrov@mail.ru</Email>
            <Phone>
